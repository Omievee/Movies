<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/test_black"
    tools:context="com.mobile.fragments.EnableLocationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/double_margin_standard"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MPText_Bold"
        android:text="@string/enable_location_description" />


    <TextView
        android:id="@+id/enableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/margin_standard"
        android:text="@string/enable_location_services"
        android:textColor="@color/new_red"
        style="@style/MPText_Bold" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/enableButton"
        app:layout_constraintBottom_toBottomOf="@id/enableButton"
        android:layout_below="@id/message"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintStart_toEndOf="@id/enableButton"
        android:src="@drawable/arrowforward"
        android:tint="@color/new_red" />


</android.support.constraint.ConstraintLayout>
