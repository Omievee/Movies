<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/margin_half"
    app:cardBackgroundColor="@color/test_black"
    app:cardPreventCornerOverlap="true">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="@dimen/margin_half">


        <ImageView
            android:id="@+id/WIFI"
            android:layout_width="80dp"
            android:layout_height="80sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_wifi_icon" />

        <TextView
            android:id="@+id/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/WIFI"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="No internet connection found"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Tryagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TEXT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_margin_standard"
            android:background="@drawable/mpbutton1"
            android:text="Try again"
            android:textSize="15sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
