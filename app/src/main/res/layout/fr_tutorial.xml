<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/margin_half"
    android:paddingRight="@dimen/margin_half"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moviepass.activities.OnboardingActivity$PlaceholderFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/quadruple_margin_standard">


        <ImageView
            android:id="@+id/tutorial_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/double_margin_standard"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tutorial_body"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/a_lot_margin_standard"
            android:alpha=".8"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="Add a long description here about your app's important feature."
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tutorial_header"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25sp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools:text="Page One" />


    </FrameLayout>


    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="bottom"-->
    <!--android:layout_marginTop="80dp"-->
    <!--android:gravity="center"-->
    <!--android:orientation="vertical">-->


    <!--</LinearLayout>-->

</RelativeLayout>

