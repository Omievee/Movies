<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_layout"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ticket_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="316dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/mask"
                android:layout_width="wrap_content"
                android:layout_height="316dp"
                android:src="@drawable/confirmation_ticket_top" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:layout_marginTop="@dimen/double_margin_standard">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/activity_confirmation_movie_title"
                android:textSize="24sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/theater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/activity_confirmation_theater"
                android:textSize="20sp"
                android:layout_below="@+id/movie_title"
                android:layout_marginTop="@dimen/margin_half"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/activity_confirmation_address"
                android:textSize="16sp"
                android:layout_below="@+id/theater"
                android:layout_marginTop="@dimen/margin_standard"/>

            <TextView
                android:id="@+id/city_things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/activity_confirmation_city_things"
                android:textSize="16sp"
                android:layout_below="@+id/address" />

            <LinearLayout
                android:id="@+id/showtime_things"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_things"
                android:orientation="horizontal">
            
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_things"
                    android:layout_marginTop="@dimen/margin_standard">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/activity_confirmation_time"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/activity_confirmation_time_placeholder"
                        android:textSize="16sp"
                        android:layout_below="@+id/time_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/date_things"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/quadruple_margin_standard">

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_confirmation_date"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date_text"
                        android:text="@string/activity_confirmation_date_placeholder"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/seat_things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_below="@+id/showtime_things">

                <TextView
                    android:id="@+id/auditorium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_confirmation_auditorium"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auditorium"
                    android:text="@string/activity_confirmation_seat"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!--
    <string name="activity_confirmation_date">Date</string>
    <string name="activity_confirmation_date_placeholder">[4/20/1999]</string>
    <string name="activity_confirmation_auditorium">[Auditorium]</string>
    <string name="activity_confirmation_seat">[Seat]</string>
    -->

    <RelativeLayout
        android:id="@+id/ticket_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_top"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:paddingBottom="@dimen/double_margin_standard">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/confirmation_ticket_bottom" />

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/action_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_standard"
            android:paddingTop="@dimen/margin_standard"
            android:paddingLeft="@dimen/margin_standard"
            android:paddingRight="@dimen/margin_standard"
            android:gravity="center_horizontal"
            android:text="@string/activity_confirmation_purchase_ticket"
            android:textColor="@color/black_text"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menuActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/quadruple_margin_standard"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        fab:menu_animationDelayPerItem="0"
        fab:menu_colorNormal="@color/red"
        fab:menu_colorPressed="@color/red_dark"
        fab:menu_labels_colorNormal="@color/red_dark"
        fab:menu_labels_colorPressed="@color/red_dark" />

    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>