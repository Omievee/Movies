<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ListViewMaps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:background="@color/test_black">


        <TextView
            android:id="@+id/ListViewText"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="List View"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/uparrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_toEndOf="@id/ListViewText"
            android:src="@drawable/uparrow"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/mapviewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:text="Map View"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/downarrow"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="@dimen/margin_half"
            android:src="@drawable/icondown"
            android:tint="@color/white" />


        <RelativeLayout
            android:id="@+id/goneList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ListViewText"
            android:clickable="true"
            android:visibility="visible">


            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/listViewTheaters"-->
            <!--tools:listitem="@layout/list_item_theater"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:nestedScrollingEnabled="false" />-->

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>