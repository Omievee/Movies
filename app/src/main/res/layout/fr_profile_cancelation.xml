<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_black">


    <RelativeLayout
        android:id="@+id/accountHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar_height"
        android:orientation="horizontal"
        android:padding="@dimen/margin_half"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cancelBack"
            style="@style/BackButton"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            style="@style/TitleView"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/cancel_subscription"
            android:textColor="@color/almost_white"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerCancelReason"
        style="@style/MaterialSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reason_for_cancellation"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintTop_toBottomOf="@id/accountHeader"
        app:ms_arrow_tint="@color/almost_white"
        app:ms_background_color="@color/charcoalGrey"
        app:ms_hint_color="@color/almost_white"
        app:ms_text_color="@color/almost_white" />

    <android.support.v7.widget.CardView
        android:id="@+id/editCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/SPINNER"
        android:layout_margin="@dimen/margin_standard"
        app:cardBackgroundColor="@color/white_ish"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerCancelReason">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:hint="@string/additional_comments_optional"
            android:textColorHint="@color/gray_dark"
            app:counterEnabled="true"
            app:counterMaxLength="250"
            app:counterTextAppearance="@style/MyOverflowText"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/cancelComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:padding="@dimen/margin_half"
                android:textColor="@color/black_text"
                android:textColorHighlight="@color/gray_icon"
                android:textColorHint="@color/gray_icon"
                android:textSize="@dimen/text_size_12" />

        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_half"
                android:lineSpacingExtra="6dp"
                android:text="@string/cancel_sub_notice"
                android:textAlignment="center"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:id="@+id/exception"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice"
                android:layout_marginTop="@dimen/margin_standard"
                android:lineSpacingExtra="6dp"
                android:text="@string/cancel_sub_exception"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_12"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exception"
                android:layout_marginTop="@dimen/doubledouble_margin_standard"
                android:lineSpacingExtra="6dp"
                android:text="@string/cancel_sub_active"
                android:textAlignment="center"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_12" />

            <com.mobile.widgets.MPProgressButton
                android:id="@+id/cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/warning"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_standard"
                android:layout_marginTop="@dimen/quadruple_margin_standard"
                android:background="@drawable/mpbutton1"
                app:mp_text="@string/cancel_subscription"
                android:textSize="@dimen/text_size_16" />


        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.constraint.ConstraintLayout>