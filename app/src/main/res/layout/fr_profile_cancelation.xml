<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_black">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/ACCOUNTHEADER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_half">

            <ImageView
                android:id="@+id/cancelBack"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/iconback"
                android:visibility="gone"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Cancel Subscription"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />


        </RelativeLayout>


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/SPINNER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/quadruple_margin_standard"
            android:hint="Reason for Cancellation"
            android:textSize="@dimen/text_size_16"
            app:ms_arrow_tint="@color/almost_white"
            app:ms_background_color="@color/charcoalGrey"
            app:ms_hint_color="@color/almost_white"
            app:ms_text_color="@color/almost_white">


        </com.jaredrummler.materialspinner.MaterialSpinner>

        <android.support.v7.widget.CardView
            android:id="@+id/EDIT_CARD"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/SPINNER"
            android:layout_margin="@dimen/margin_standard"
            app:cardBackgroundColor="@color/white_ish"
            app:cardCornerRadius="5dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Additional comments (optional)"
                android:textColorHint="@color/gray_dark"
                app:counterEnabled="true"
                app:counterMaxLength="250"
                app:counterTextAppearance="@style/MyOverflowText"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/CancelComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="250"
                    android:padding="@dimen/margin_half"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black_text"
                    android:textColorHighlight="@color/gray_icon"
                    android:textColorHint="@color/gray_icon" />

            </android.support.design.widget.TextInputLayout>


        </android.support.v7.widget.CardView>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_below="@id/EDIT_CARD">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_marginLeft="@dimen/margin_standard"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_half"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/cancel_sub_notice"
                    android:textAlignment="center"
                    android:textColor="@color/almost_white"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/exception"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notice"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/cancel_sub_exception"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exception"
                    android:layout_marginTop="@dimen/doubledouble_margin_standard"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/cancel_sub_active"
                    android:textAlignment="center"
                    android:textColor="@color/almost_white"
                    android:textSize="@dimen/text_size_12" />

                <Button
                    android:id="@+id/cancelbutton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/warning"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/quadruple_margin_standard"
                    android:background="@drawable/mpbutton1"
                    android:text="Cancel Subscription"
                    android:textSize="@dimen/text_size_16" />


            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>


    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</android.support.design.widget.CoordinatorLayout>