<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_blue">


    <android.support.v7.widget.Toolbar
        android:id="@+id/CONFIRMED_HEADER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/charcoal"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half">

                <TextView
                    android:id="@+id/CONFIRMED_MOVIE_TITLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="[ MOVIE TITLE ]"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/CONFIRMED_X_BUTTON"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:background="@android:color/transparent"
                    android:src="@drawable/close_white" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_standard"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/CONFIRMED_THEATER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="[ MOVIE THEATER ]"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/CONFIRMED_SHOWTIME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:text="[ 12:00 PM ]"
                    android:textColor="@color/new_red"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CONFIRMED_HEADER">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_standard"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CONFIRMED_READY_MESSAGE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:text="@string/activity_confirmation_purchase_ticket"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_margin_standard">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/CONFIRMED_MASTERCARD"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginTop="@dimen/margin_half"
                    android:src="@drawable/mpmastercard2"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/CONFIRMED_LOADED_LOGO"
                    android:layout_width="60dp"
                    android:layout_height="66dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/double_margin_standard"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/loadedsuccession"
                    android:visibility="visible" />

            </FrameLayout>


            <TextView
                android:id="@+id/CONFIRMED_ZIP_TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/quadruple_margin_standard"
                android:paddingStart="@dimen/quadruple_margin_standard"
                android:text="@string/activity_confirmation_confirmation_text"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/CONFIRMED_CONFIRMATION_CODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_standard"
                android:layout_marginTop="@dimen/margin_half"
                android:background="@drawable/confirmation_code_confirm"
                android:padding="@dimen/margin_half"
                android:text=" 11204 "
                android:textColor="@color/black_text"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/CONFIRMED_CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/double_margin_standard"
                android:text="Cancel or Change Reservation"
                android:textColor="@color/new_red"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/CONFIRMED_BOTTOMNAV"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <include
        android:id="@+id/confirm_progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>