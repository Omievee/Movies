<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_blue">


    <android.support.v7.widget.Toolbar
        android:id="@+id/CONFIRMED_HEADER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/charcoal"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/CONFIRMED_MOVIE_TITLE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:elevation="5dp"
                    android:padding="@dimen/margin_half"
                    android:text="[ MOVIE TITLE ]"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageButton

                    android:id="@+id/CONFIRMED_X_BUTTON"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_minimum"
                    android:layout_weight=".1"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/margin_standard"
                    android:src="@drawable/closeemptyionicons" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/CONFIRMED_THEATER"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="[ MOVIE THEATER ]"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/CONFIRMED_SHOWTIME"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="@dimen/margin_half"
                    android:text="[ 12:00 PM ]"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CONFIRMED_HEADER"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CONFIRMED_READY_MESSAGE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_margin_standard"
            android:text="@string/activity_confirmation_purchase_ticket"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/CONFIRMED_MASTERCARD"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/margin_standard"
                android:src="@drawable/mpmastercard2"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/CONFIRMED_LOADED_LOGO"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="@dimen/double_margin_standard"
                android:src="@drawable/loadedsuccession" />
        </FrameLayout>


        <TextViews
            android:id="@+id/CONFIRMED_CONFIRMATION_CODE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_confirmation_confirmation_text"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/FAB_CANCELRES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/quadruple_margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:animateLayoutChanges="true"
        android:elevation="5dp"
        app:fab_size="normal"
        app:layout_anchorGravity="right | bottom" />


    <include
        android:id="@+id/CONFIRMED_BOTTOMNAV"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <include
        android:id="@+id/confirm_progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>