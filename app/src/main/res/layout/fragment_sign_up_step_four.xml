<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:text="@string/fragment_sign_up_step_four_header"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_below="@+id/header"
        android:text="@string/fragment_sign_up_step_four_copy"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:text="@string/fragment_sign_up_step_four_price"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:layout_below="@+id/copy"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/button_credit_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/selector_white_to_red"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:src="@drawable/icon_credit_card" />

        <ImageButton
            android:id="@+id/button_paypal"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/selector_white_to_red"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:src="@drawable/selector_paypal"/>

        <ImageButton
            android:id="@+id/button_android_pay"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_android_pay"
            android:background="@drawable/selector_white_to_red"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard" />

    </LinearLayout>

    <Button
        android:id="@+id/button_sign_up"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:elevation="2dp"
        android:background="@drawable/button_red"
        android:text="@string/fragment_sign_up_step_four_finish"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/double_margin_standard" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>