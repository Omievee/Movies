<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation">

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/movie_things"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="116dp"
                        android:layout_height="175dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/poster"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/movie_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:text="@string/activity_theater_address_placeholder" />

                        <TextView
                            android:id="@+id/movie_genre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:text="@string/activity_theater_city_things_placeholder"
                            android:layout_below="@+id/movie_title" />

                        <View
                            android:id="@+id/line"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/movie_genre"
                            android:layout_above="@+id/run_time_things"
                            android:background="@color/gray_icon" />

                        <LinearLayout
                            android:id="@+id/run_time_things"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp" >

                            <ImageView
                                android:id="@+id/clock"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:paddingTop="1dp"
                                android:src="@drawable/clock"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/text_run_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center_vertical"
                                android:layout_toRightOf="@+id/clock"
                                android:text="@string/list_item_movie_poster_run_time_placeholder"
                                android:textColor="@color/gray_icon"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/movie_select_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gun_metal"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:text="@string/activity_movie_theater_select_text"
                    android:layout_below="@+id/movie_things"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:animateLayoutChanges="true" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_theaters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@android:color/transparent"
                    tools:listitem="@layout/list_item_theater"
                    android:layout_below="@+id/movie_select_text"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/theater_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gun_metal"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:text="@string/activity_theater_movie_title"
                    android:layout_below="@+id/recycler_view_theaters"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true" />

                <TextView
                    android:id="@+id/theater_select_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gun_metal"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:text="@string/activity_theater_movie_time"
                    android:layout_below="@+id/theater_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_showtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:divider="@null"
                    android:dividerHeight="8dp"
                    android:listSelector="@android:color/transparent"
                    tools:listitem="@layout/list_item_showtime"
                    android:layout_below="@+id/theater_select_time"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="gone" />

                <View
                    android:id="@+id/below_showtimes"
                    android:layout_below="@+id/recycler_view_showtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/button_action"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_below="@+id/recycler_view_showtimes"
                    android:background="@drawable/button_red"
                    android:text="@string/activity_theater_button_action"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:layout_marginRight="@dimen/margin_standard"
                    android:layout_marginBottom="@dimen/margin_standard" />

                <View
                    android:id="@+id/bottom_of_screen"
                    android:layout_below="@+id/button_action"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>