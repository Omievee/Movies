<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/list_item_history"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_marginLeft="@dimen/margin_standard"
    android:layout_marginRight="@dimen/margin_standard"
    android:layout_marginTop="@dimen/margin_standard"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rounded_image_frame"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_half">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_half"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_half"
                    android:text="@string/list_item_history_title_placeholder"
                    android:maxLines="1"/>

                <LinearLayout
                    android:id="@+id/theater_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_title"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/theater"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="@string/list_item_history_theater_placeholder" />

                    <TextView
                        android:id="@+id/auditorium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="@string/list_item_history_auditorium_placeholder" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/theater_details"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/time_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="@string/list_item_history_time" />

                    <TextView
                        android:id="@+id/date_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="@string/list_item_history_date" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titles"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="@string/list_item_history_time_placeholder" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="@string/list_item_history_date_placeholder" />

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>