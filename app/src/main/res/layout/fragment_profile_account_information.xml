<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.fragments.ProfileAccountInformation">

    <RelativeLayout
        android:id="@+id/ACCOUNTHEADER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin_half">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_half"
            android:text="Account Information"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/gray_icon"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cancelChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/gray_icon"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/UserNAmeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ACCOUNTHEADER"
        android:layout_marginTop="@dimen/margin_standard"
        android:orientation="vertical"
        android:padding="@dimen/margin_half">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:textColorHint="@color/white_80_opacity"
            android:theme="@style/EditTextStyle"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/USER_NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:animateLayoutChanges="true"
                android:backgroundTint="@color/white_40_opacity"
                android:hint="Name"
                android:focusable="false"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:text="[USER NAME]"
                android:textColor="@color/white"
                android:textColorLink="@android:color/transparent"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/text_size_14"
                app:backgroundTint="@color/white_40_opacity" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_standard"
            android:focusable="false"
            android:textColorHint="@color/white_80_opacity"
            android:theme="@style/EditTextStyle"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/USER_EMAIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:animateLayoutChanges="true"
                android:focusable="false"
                android:backgroundTint="@color/white_40_opacity"
                android:hint="Email"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:text="[USER NAME]"
                android:textColor="@color/white"
                android:textColorLink="@android:color/transparent"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/text_size_14"
                app:backgroundTint="@color/white_40_opacity" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_standard"
            android:textColorHint="@color/white_80_opacity"
            android:theme="@style/EditTextStyle"
            android:focusable="false"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/MPCardNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:animateLayoutChanges="true"
                android:backgroundTint="@color/white_40_opacity"
                android:hint="MoviePass Card"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:text="[USER NAME]"
                android:focusable="false"
                android:textColor="@color/white"
                android:textColorLink="@android:color/transparent"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/text_size_14"
                app:backgroundTint="@color/white_40_opacity" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/password1TextInputLayout"
            android:layout_marginTop="@dimen/margin_standard"
            android:textColorHint="@color/white_80_opacity"
            android:theme="@style/EditTextStyle"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:animateLayoutChanges="true"
                android:backgroundTint="@color/white_40_opacity"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:focusable="false"
                android:textColor="@color/white"
                android:textColorLink="@android:color/transparent"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/text_size_14"
                app:backgroundTint="@color/white_40_opacity" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/password2TextInputLayout"
            android:layout_marginTop="@dimen/margin_standard"
            android:textColorHint="@color/white_80_opacity"
            android:theme="@style/EditTextStyle"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:animateLayoutChanges="true"
                android:backgroundTint="@color/white_40_opacity"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:focusable="false"
                android:textColor="@color/white"
                android:textColorLink="@android:color/transparent"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/text_size_14"
                app:backgroundTint="@color/white_40_opacity" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
