<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView
        android:id="@+id/ticketType"
        style="@style/MPText"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_standard_and_half"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Adult Tickets:" />

    <ImageView
        android:id="@+id/infoIcon"
        app:layout_constraintStart_toEndOf="@id/ticketType"
        android:layout_marginStart="2dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/ticketType"
        app:layout_constraintBottom_toBottomOf="@id/ticketType"
        android:src="@drawable/infoicon2"
        android:tint="@color/red"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/ticketType" />

    <TextView
        android:id="@+id/quantity"
        style="@style/MPText_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_standard"
        app:layout_constraintEnd_toStartOf="@+id/x"
        tools:text="2" />

    <TextView
        android:id="@+id/x"
        style="@style/MPText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="top"
        android:text="@string/x"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/price" />

    <TextView
        android:id="@+id/price"
        style="@style/MPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        app:layout_constraintStart_toEndOf="@id/x"
        tools:text="$7.45" />

    <TextView
        android:id="@+id/total"
        style="@style/GuestTicketTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_standard_and_half"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$14.90" />

</merge>
