<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/THEATERS_LISTITEM"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_half"
    android:animateLayoutChanges="true"
    android:paddingBottom="@dimen/margin_standard"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ONE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/test_blue"
            android:orientation="vertical">


            <TextView
                android:id="@+id/THEATER_NAME_LISTITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_half"
                android:text="[MOVIE THEATER NAME]"
                android:textColor="@color/white_ish"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!--<TextView-->
            <!--android:id="@+id/THEATER_ADDRESS_LISTITEM"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/margin_standard"-->
            <!--android:text="[ADDRESS]"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="15sp" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_half"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/THEATER_ADDRESS2_LISTITEM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="[ADDRESS]"
                    android:textColor="@color/white_ish"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/THEATER_DISTANCE_LISTITEM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/double_margin_standard"
                    android:text="[DISTANCE]"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/THEATER_PIN_LISTITEM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:paddingEnd="@dimen/margin_half"
                    android:src="@drawable/locationiconsmallred" />


            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/SCROll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:animateLayoutChanges="true">

                <RadioGroup
                    android:id="@+id/THEATER_SHOWTIMEGRID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/Not_Supported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:text="This screening is not supported by MoviePass"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>