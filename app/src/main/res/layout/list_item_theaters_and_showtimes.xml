<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/THEATERS_LISTITEM"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/charcoalGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/charcoalGrey">


        <RelativeLayout
            android:id="@+id/ONE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/charcoalGrey"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_standard">

                <ImageView
                    android:id="@+id/icon_ticket"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_toEndOf="@id/icon_seat"
                    android:src="@drawable/ticketnavwhite"
                    android:tint="@color/white" />

                <ImageView
                    android:id="@+id/icon_seat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_half"
                    android:src="@drawable/icon_seat_copy"
                    android:textAlignment="viewEnd" />

            </RelativeLayout>


            <TextView
                android:id="@+id/THEATER_NAME_LISTITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginTop="@dimen/margin_half"
                android:text="[MOVIE THEATER NAME]"
                android:textColor="@color/almost_white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/THEATER_ADDRESS2_LISTITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/THEATER_NAME_LISTITEM"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginTop="@dimen/margin_half"
                android:text="[ADDRESS]"
                android:textColor="@color/almost_white"
                android:textSize="12sp" />


            <RelativeLayout
                android:id="@+id/Last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/THEATER_ADDRESS2_LISTITEM"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginTop="@dimen/margin_half"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/THEATER_ADDRESS_LISTITEM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="[ADDRESS]"
                    android:textColor="@color/almost_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/THEATER_DISTANCE_LISTITEM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/double_margin_standard"
                    android:layout_marginTop="3dp"
                    android:text="[DISTANCE]"
                    android:textColor="@color/almost_white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/THEATER_PIN_LISTITEM"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="@dimen/margin_half"
                    android:src="@drawable/locationiconsmallred"
                    android:tint="@color/new_red" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="false"
                android:layout_below="@id/Last" />

        </RelativeLayout>

        <TextView
            android:id="@+id/notSupported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/margin_half"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:textColor="@color/almost_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>