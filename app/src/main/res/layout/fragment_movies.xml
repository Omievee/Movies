<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_releases_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/fragment_movies_new_releases"
                android:textSize="24sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/new_releases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_releases_text"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:listSelector="@android:color/transparent"
                android:orientation="horizontal"
                tools:listitem="@layout/list_item_movie_poster_withbottom" />

            <TextView
                android:id="@+id/top_box_office_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/new_releases"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/fragment_movies_top_box_office"
                android:textSize="24sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/top_box_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_box_office_text"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:listSelector="@android:color/transparent"
                tools:listitem="@layout/list_item_movie_poster_withbottom" />


            <TextView
                android:id="@+id/coming_soon_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/top_box_office"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/fragment_movies_coming_soon"
                android:textSize="24sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/coming_soon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coming_soon_text"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:listSelector="@android:color/transparent"
                tools:listitem="@layout/list_item_movie_poster_withbottom" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>