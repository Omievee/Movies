<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="wrap_content">

    <com.mobile.extensions.CustomSwipeRefresh
        android:id="@+id/SWIPE2REFRESH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mobile.extensions.LockableScrollView
            android:id="@+id/MOVIES_MAINCONTENT"
            style="@style/Theme.AppCompat.NoActionBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/MAIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <FrameLayout
                    android:id="@+id/FRAME"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/FeaturedRE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layoutAnimation="@anim/layout_animation"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal">

                    </android.support.v7.widget.RecyclerView>

                    <ImageView
                        android:id="@+id/MoviePass_HEADER"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/double_margin_standard"
                        android:src="@drawable/logo2"
                        android:textAlignment="center"
                        app:layout_collapseMode="pin" />

                    <ImageView
                        android:id="@+id/search_inactive"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="42dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/search_icon_white"
                        android:tint="@color/white" />

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/FRAME"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/new_releases_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_standard"
                            android:gravity="center_vertical"
                            android:text="@string/fragment_movies_new_releases"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/new_releases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:layoutAnimation="@anim/layout_animation"
                            android:listSelector="@android:color/transparent"
                            android:orientation="horizontal" />

                        <TextView
                            android:id="@+id/now_Playing_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_standard"
                            android:gravity="center_vertical"
                            android:text="Now Playing"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/now_playing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:layoutAnimation="@anim/layout_animation"
                            android:listSelector="@android:color/transparent"
                            android:orientation="horizontal" />

                        <TextView
                            android:id="@+id/top_box_office_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_standard"
                            android:gravity="center_vertical"
                            android:text="@string/fragment_movies_top_box_office"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/top_box_office"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp"

                            android:layoutAnimation="@anim/layout_animation"
                            android:listSelector="@android:color/transparent" />


                        <TextView
                            android:id="@+id/coming_soon_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_standard"
                            android:gravity="center_vertical"
                            android:text="@string/fragment_movies_coming_soon"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/coming_soon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_standard"

                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:layoutAnimation="@anim/layout_animation"
                            android:listSelector="@android:color/transparent" />


                    </LinearLayout>


                </RelativeLayout>

                <include
                    android:id="@+id/progress"
                    layout="@layout/view_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/quadruple_margin_standard" />

            </RelativeLayout>
        </com.mobile.extensions.LockableScrollView>

    </com.mobile.extensions.CustomSwipeRefresh>

    <ImageView
        android:layout_width="0dp"
        android:id="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_image_frame"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/guideline3">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/previewImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.5"
                android:background="@color/test_blue"
                android:backgroundTint="@color/test_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/previewMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/previewMovieTitle">


                <TextView
                    android:id="@+id/previewRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_half"
                    android:animateLayoutChanges="true"
                    android:padding="@dimen/margin_minimum"
                    android:text="[RATED  *]"
                    android:textColor="@color/almost_white"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/previewRunningTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_half"
                    android:animateLayoutChanges="true"
                    android:padding="@dimen/margin_minimum"
                    android:text="[SELECTED RUN TIME]"
                    android:textColor="@color/almost_white"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <TextView
                android:id="@+id/previewSynopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


</android.support.constraint.ConstraintLayout>