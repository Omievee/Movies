<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/double_margin_standard"
    android:layout_marginEnd="@dimen/margin_half"
    android:layout_marginStart="@dimen/margin_half"
    android:layout_marginTop="@dimen/margin_half"
    android:animateLayoutChanges="true"
    android:elevation="5dp"
    android:paddingBottom="5dp"
    fresco:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/list_item_cinemaposterCARDVIEW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/test_blue">


        <FrameLayout
            android:id="@+id/FRAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/CINEMAPOSTER"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:foreground="@drawable/poster_gradient"
                fresco:failureImage="@drawable/film_reel_icon" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cinema_movieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_standard"
                    android:text="[ MOVIE TITLE ] "
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <!--<ImageButton-->
                <!--android:id="@+id/cinema_Synopsis"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginTop="@dimen/margin_half"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:padding="@dimen/margin_half"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/infoicon2"-->
                <!--android:tint="@color/white" />-->


            </LinearLayout>
        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/HORIZVIEW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FRAME"
            android:layout_gravity="center"
            android:animateLayoutChanges="true">

            <RadioGroup
                android:id="@+id/SHOWTIMEGRID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_half"
                android:orientation="horizontal">

            </RadioGroup>


        </HorizontalScrollView>


    </RelativeLayout>

    <TextView
        android:id="@+id/Not_Supported"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="This screening is not supported by MoviePass"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

</android.support.v7.widget.CardView>