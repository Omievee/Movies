<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_cinemaposterCARDVIEW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_standard"
    android:elevation="5dp"
    android:paddingBottom="5dp"
    fresco:cardCornerRadius="5dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/CINEMAPOSTER"
        android:foreground="@drawable/poster_gradient"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        fresco:failureImage="@drawable/activity_splash_star"
        fresco:roundedCornerRadius="4dp" />


    <TextView
        android:id="@+id/cinema_movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/margin_standard"
        android:text="[ MOVIE TITLE ] "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</android.support.v7.widget.CardView>