<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_cinemaposterCARDVIEW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_margin="@dimen/margin_half"
    android:elevation="5dp"
    android:paddingBottom="5dp"
    fresco:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/test_blue">

        <FrameLayout
            android:id="@+id/FRAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/CINEMAPOSTER"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:foreground="@drawable/poster_gradient"
                fresco:failureImage="@drawable/activity_splash_star"
                fresco:roundedCornerRadius="4dp" />


            <TextView
                android:id="@+id/cinema_movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/margin_standard"
                android:text="[ MOVIE TITLE ] "
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/HORIZVIEW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FRAME"
            android:layout_gravity="center"
            android:animateLayoutChanges="true">

            <GridLayout
                android:id="@+id/SHOWTIMEGRID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/double_margin_standard"
                android:columnOrderPreserved="false"
                android:layout_margin="@dimen/margin_standard"
                android:visibility="visible">

            </GridLayout>


        </HorizontalScrollView>


    </RelativeLayout>

</android.support.v7.widget.CardView>