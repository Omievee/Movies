<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/test_blue"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_standard">

        <TextView
            android:id="@+id/NOTICE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Etickets cannot be canceled"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/NOTICE_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:text="Be sure this is the movie, showtime, and theater you want before proceeding"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:text="*Outline an 'M' to confirm "

            android:textStyle="italic">

        </TextView>

        <com.andrognito.patternlockview.PatternLockView
            android:id="@+id/LOCKVIEW"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/margin_standard"
            app:correctStateColor="@color/gun_metal"
            app:dotNormalSize="10dp"
            app:dotSelectedSize="24dp"
            app:wrongStateColor="@color/new_red" />


    </LinearLayout>


    <include
        android:id="@+id/lock_confirm"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</android.support.v7.widget.CardView>