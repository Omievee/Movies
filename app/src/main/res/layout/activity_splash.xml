<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context="com.mobile.splash.SplashActivity">


    <RelativeLayout
        android:id="@+id/logo_things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/double_margin_standard"
            android:paddingRight="@dimen/double_margin_standard"
            android:src="@drawable/moviepass_logo" />


    </RelativeLayout>

</RelativeLayout>
