<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/RootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/SelectedMovie_Details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quadruple_margin_standard"
            android:layout_margin="@dimen/margin_quarter"
            android:background="@color/black_overlay"
            android:elevation="@dimen/basic_elevation"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SEATCHART_MOVIETITLE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isScrollContainer="true"
                    android:maxLines="1"
                    android:nestedScrollingEnabled="true"
                    android:text="@string/activity_select_seat_movie_title"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/SEATCHART_THEATER"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:text="@string/activity_select_seat_theater_name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/SEATCHART_SHOWTIME"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/activity_select_seat_showtime"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/SEATCHART_SEAT"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:text="@string/activity_select_seat_seats"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selected_seats"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Seating_Rubric"
            android:layout_width="match_parent"
            android:layout_height="@dimen/double_margin_standard"
            android:layout_below="@id/SelectedMovie_Details"
            android:layout_marginTop="@dimen/margin_standard"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/available_seat_example"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:src="@drawable/icon_seat_available" />

            <TextView
                android:id="@+id/available_seat_example_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:text="@string/activity_select_seat_available"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/unavailable_seat_example"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:src="@drawable/icon_seat_unavailable" />

            <TextView
                android:id="@+id/unavailable_seat_example_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:text="@string/activity_select_seat_unavailable"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/selected_seat_example"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:src="@drawable/icon_seat_selected" />

            <TextView
                android:id="@+id/selected_seat_example_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:text="@string/activity_select_seat_selected"
                android:textColor="@color/white"
                android:textSize="13sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/image_screen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/double_margin_standard"
            android:layout_below="@+id/Seating_Rubric"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_margin_standard"
            android:scaleType="fitXY"
            android:src="@drawable/image_screen" />


        <HorizontalScrollView
            android:id="@+id/HorizScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image_screen"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_standard"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:textAlignment="center">


                <GridLayout
                    android:id="@+id/gridSeatsA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:padding="0dp" />

                <GridLayout
                    android:id="@+id/gridSeatsB"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />

                <GridLayout
                    android:id="@+id/gridSeatsC"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />

                <GridLayout
                    android:id="@+id/gridSeatsD"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"

                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


                <GridLayout
                    android:id="@+id/gridSeatsM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_margin="0dp"
                    android:animateLayoutChanges="true"
                    android:columnCount="30"
                    android:padding="0dp" />


            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:id="@+id/TipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/SEATCHART_RESERVE"
            android:layout_marginStart="10dp"
            android:text="*Scroll Sideways If Seating Chart Cuts Off"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/SEATCHART_RESERVE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_above="@+id/navigation"
            android:layout_margin="@dimen/margin_standard"
            android:animateLayoutChanges="true"
            android:background="@drawable/button_red"
            android:text="@string/activity_theater_button_action"
            android:textSize="15sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/navigation"
            layout="@layout/element_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom" />

        <include
            android:id="@+id/progress"
            layout="@layout/view_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>