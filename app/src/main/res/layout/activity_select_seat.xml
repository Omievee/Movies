<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/button_action"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/seats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_standard"
            android:paddingLeft="@dimen/margin_standard"
            android:paddingRight="@dimen/margin_standard"
            android:paddingBottom="@dimen/margin_standard">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/movie_things"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_standard">

                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_standard" />

                    <RelativeLayout
                        android:id="@+id/movie_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/poster"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginRight="@dimen/margin_half"
                        android:layout_marginTop="@dimen/margin_half"
                        android:layout_marginBottom="@dimen/margin_half">

                        <TextView
                            android:id="@+id/movie_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activity_select_seat_movie_title"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:maxLines="1"/>

                        <View
                            android:id="@+id/line"
                            android:layout_width="100dp"
                            android:layout_height="1dp"
                            android:layout_below="@+id/movie_title"
                            android:background="@color/gray_icon" />

                        <LinearLayout
                            android:id="@+id/run_time_things"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_below="@+id/line"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/clock"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:paddingTop="1dp"
                                android:src="@drawable/clock_pinkish_gray" />

                            <TextView
                                android:id="@+id/text_run_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center_vertical"
                                android:layout_toRightOf="@+id/clock"
                                android:text="@string/activity_select_seat_run_time_placeholder"
                                android:textColor="@color/pinkish_gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/seat_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_view_gun_metal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_half"
                                android:layout_marginRight="@dimen/margin_half"
                                android:layout_marginTop="@dimen/margin_half"
                                android:layout_marginBottom="@dimen/margin_half">

                                <TextView
                                    android:id="@+id/theater_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/activity_select_seat_theater_name"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/showtime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/theater_name"
                                    android:text="@string/activity_select_seat_showtime"
                                    android:textColor="@color/pinkish_gray" />

                                <TextView
                                    android:id="@+id/seats_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/showtime"
                                    android:text="@string/activity_select_seat_seats"
                                    android:textColor="@color/pinkish_gray" />

                                <TextView
                                    android:id="@+id/selected_seats"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/seats_text"
                                    android:text="@string/activity_select_seat_seats_placeholder"
                                    android:textColor="@color/red" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/seat_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_things"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/available_seat_example"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/icon_seat_available" />

                    <TextView
                        android:id="@+id/available_seat_example_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:text="@string/activity_select_seat_available"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/unavailable_seat_example"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/icon_seat_unavailable" />

                    <TextView
                        android:id="@+id/unavailable_seat_example_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:text="@string/activity_select_seat_unavailable"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/selected_seat_example"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/icon_seat_selected" />

                    <TextView
                        android:id="@+id/selected_seat_example_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_select_seat_selected"
                        android:textColor="@color/white" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_screen"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/image_screen"
                    android:layout_below="@+id/seat_example"
                    android:scaleType="fitXY" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_screen"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <GridLayout
                            android:id="@+id/grid_seats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_above="@+id/navigation"
        android:background="@drawable/button_red"
        android:text="@string/activity_theater_button_action"
        android:textSize="15sp"
        android:animateLayoutChanges="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"/>

    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>