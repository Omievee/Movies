<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true">


    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_half"
        android:layout_marginTop="30dp"
        android:src="@drawable/close_white"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/HistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/historyDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:text="Movie Ttle"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/historyLocal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_half"
        android:layout_marginTop="@dimen/margin_half"
        android:text="January 1, 2018"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/historyLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/enlargedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_standard"
        android:text="NYC"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/enlargedImage"
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:clickable="false"
        android:layout_centerInParent="true"
        android:transitionName="historyPoster"
        fresco:scaleType="fitXY" />


    <TextView
        android:id="@+id/liketext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enlargedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:text="Did you like it?"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/liketext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/doubledouble_margin_standard">


        <ImageView
            android:id="@+id/like"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/thumbsup" />

        <ImageView
            android:id="@+id/dislike"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/double_margin_standard"
            android:layout_toEndOf="@id/like"
            android:src="@drawable/thumbsdown" />

    </RelativeLayout>


</RelativeLayout>