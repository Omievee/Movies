<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_standard"
            android:scaleType="fitCenter"
            android:src="@drawable/moviepass_logo_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="@string/activity_sign_up_step_one_get_started"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:textColorHint="@color/white_80_opacity"
                    android:theme="@style/EditTextStyle"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@style/text_in_layout_hint_Style">

                    <EditText
                        android:id="@+id/SIGNUP_EMAIL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_sign_up_step_one_email"
                        android:inputType="textEmailAddress"
                        android:animateLayoutChanges="true"
                        android:backgroundTint="@color/white_40_opacity"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white_80_opacity"
                        android:textColorLink="@android:color/transparent"
                        android:textCursorDrawable="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/white_40_opacity"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email2TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:textColorHint="@color/white_80_opacity"
                    android:theme="@style/EditTextStyle"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@style/text_in_layout_hint_Style">

                    <EditText
                        android:id="@+id/SIGNUP_EMAIL_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Email"
                        android:inputType="textEmailAddress"
                        android:animateLayoutChanges="true"
                        android:backgroundTint="@color/white_40_opacity"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white_80_opacity"
                        android:textColorLink="@android:color/transparent"
                        android:textCursorDrawable="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/white_40_opacity" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwordTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:textColorHint="@color/white_80_opacity"
                    android:theme="@style/EditTextStyle"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@style/text_in_layout_hint_Style">

                    <EditText
                        android:id="@+id/SIGNUP_PASSSWORD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/activity_sign_up_step_one_password"
                        android:inputType="textPassword"
                        android:animateLayoutChanges="true"
                        android:backgroundTint="@color/white_40_opacity"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white_80_opacity"
                        android:textColorLink="@android:color/transparent"
                        android:textCursorDrawable="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/white_40_opacity"/>

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/SPINNER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/margin_half"
                        android:hint="Gender"
                        android:textSize="18sp"
                        app:ms_arrow_tint="@color/white"
                        app:ms_background_color="@color/dark"
                        app:ms_hint_color="@color/white_80_opacity"
                        app:ms_text_color="@color/white" />


                    <EditText
                        android:id="@+id/DOB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="50dp"
                        android:layout_toRightOf="@id/SPINNER"
                        android:layout_marginTop="@dimen/margin_half"
                        android:clickable="true"
                        android:editable="false"
                        android:backgroundTint="@color/white_40_opacity"
                        android:focusable="false"
                        android:hint="Date of Birth" />

                </RelativeLayout>


                <Button
                    android:id="@+id/SIGNUP_BUTTON"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputPassword"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/quadruple_margin_standard"
                    android:background="@drawable/mpbutton1"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="@string/activity_sign_up_step_one_sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>

