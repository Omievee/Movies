<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/activity_verification_header"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_standard" />

    <TextView
        android:id="@+id/subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_verification_subheader"
        android:layout_below="@+id/header"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:id="@+id/movie_things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subheader"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/margin_standard">

        <RelativeLayout
            android:id="@+id/poster_relative_layout"
            android:layout_width="116dp"
            android:layout_height="175dp">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ticket_top_red_dark" />

            <TextView
                android:id="@+id/poster_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginRight="@dimen/margin_half"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/poster_relative_layout"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/activity_verification_movie_title" />

            <TextView
                android:id="@+id/movie_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="@string/activity_verification_movie_genre"
                android:layout_below="@+id/movie_title" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/movie_genre"
                android:background="@color/gray_icon" />

            <LinearLayout
                android:id="@+id/run_time_things"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_below="@+id/line"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:paddingTop="1dp"
                    android:src="@drawable/clock"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_run_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:layout_toRightOf="@+id/clock"
                    android:text="@string/activity_verification_run_time_placeholder"
                    android:textColor="@color/gray_icon"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/camera_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/movie_things"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/button_open_camera"
            android:layout_width="@dimen/quadruple_margin_standard"
            android:layout_height="@dimen/quadruple_margin_standard"
            android:background="@drawable/shape_circle_red"
            android:src="@drawable/icon_camera_white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical" />

    </FrameLayout>

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_frame_layout"/>

    <!-- <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard" /> -->

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginRight="@dimen/double_margin_standard"
        fab:menu_animationDelayPerItem="0"
        fab:menu_colorNormal="@color/red"
        fab:menu_colorPressed="@color/red_dark"
        fab:menu_labels_colorNormal="@color/red_dark"
        fab:menu_labels_colorPressed="@color/red_dark" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>