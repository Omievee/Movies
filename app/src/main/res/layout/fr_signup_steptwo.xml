<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coord_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark"
    android:fillViewport="true"
    tools:context="com.mobile.fragments.SignUpStepTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!-- LOGO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_standard_and_half"
                android:gravity="center_horizontal"
                android:src="@drawable/logo"
                android:tint="@color/new_red" />

            <!-- divider -->

            <RelativeLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="28dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25">

                        <RelativeLayout
                            android:id="@+id/relative01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignStart="@id/intro_indicator_0"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:background="@android:color/white" />

                            <ImageView
                                android:id="@+id/intro_indicator_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/indicator_selected" />

                            <ImageView
                                android:id="@+id/intro_indicator_0_check"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/check_mark"
                                />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/relative01"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_half"
                            android:text="Account"
                            android:textAlignment="center"
                            android:textColor="@color/almost_white"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25">

                        <RelativeLayout
                            android:id="@+id/relative02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:background="@android:color/white" />

                            <ImageView
                                android:id="@+id/intro_indicator_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/indicator_selected" />

                            <ImageView
                                android:id="@+id/intro_indicator_1_check"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/check_mark" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/shipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/relative02"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_half"
                            android:text="Shipping"
                            android:textAlignment="center"
                            android:textColor="@color/almost_white"
                            android:textSize="12sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25">

                        <RelativeLayout
                            android:id="@+id/relative03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:background="@android:color/white" />

                            <ImageView
                                android:id="@+id/intro_indicator_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/indicator_selected" />

                            <ImageView
                                android:id="@+id/intro_indicator_2_check"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/check_mark"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/relative03"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_half"
                            android:text="Payment"
                            android:textAlignment="center"
                            android:textColor="@color/almost_white"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25">


                        <RelativeLayout
                            android:id="@+id/relative04"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignEnd="@id/intro_indicator_3"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="5dp"
                                android:background="@android:color/white" />

                            <ImageView
                                android:id="@+id/intro_indicator_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/indicator_unselected" />

                            <ImageView
                                android:id="@+id/intro_indicator_3_check"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/check_mark"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/relative04"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_half"
                            android:text="Confirm"
                            android:textAlignment="center"
                            android:textColor="@color/almost_white"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

                <TextView
                    android:id="@+id/planPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_sign_up_step_two_header2"
                    android:textAlignment="center"
                    android:textColor="@color/almost_white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/paymentDisclaimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_sign_up_step_two_header"
                    android:textAlignment="center"
                    android:textColor="@color/almost_white"
                    android:textSize="14sp" />


                    <LinearLayout
                        android:id="@+id/LAYOUT_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_standard_and_half"
                        android:orientation="horizontal">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ccNumTextInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_standard"
                            android:layout_weight="1"
                            android:textColorHint="@color/white_80_opacity"
                            android:theme="@style/EditTextStyle"
                            app:errorTextAppearance="@style/error_appearance"
                            app:hintTextAppearance="@style/text_in_layout_hint_Style">

                            <EditText
                                android:id="@+id/SIGNUP2_CCNUM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginEnd="@dimen/margin_half"
                                android:layout_marginTop="@dimen/margin_standard"
                                android:animateLayoutChanges="true"
                                android:backgroundTint="@color/white_40_opacity"
                                android:hint="Credit Card Number"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="16"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAppearance="@style/normal_text_in_layout_Style"
                                android:textColor="@color/almost_white"
                                android:textColorHighlight="@color/white_80_opacity"
                                android:textColorLink="@android:color/transparent"
                                android:textCursorDrawable="@color/white"
                                app:backgroundTint="@color/white_40_opacity" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageButton
                            android:id="@+id/SIGNUP2_SCANCARD_ICON"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="@dimen/margin_standard"
                            android:background="@color/test_blue"
                            android:backgroundTint="@color/test_black"
                            android:scaleType="fitCenter"
                            android:src="@drawable/scanicon2" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LAYOUT_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_standard"
                        android:layout_marginStart="@dimen/margin_standard"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/expTextInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColorHint="@color/white_80_opacity"
                            android:theme="@style/EditTextStyle"
                            app:errorTextAppearance="@style/error_appearance"
                            app:hintTextAppearance="@style/text_in_layout_hint_Style">

                            <EditText
                                android:id="@+id/SIGNUP2_EXPIRATION"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_standard"
                                android:layout_weight="1"
                                android:animateLayoutChanges="true"
                                android:backgroundTint="@color/white_40_opacity"
                                android:hint="Expiration MM/YY"
                                android:inputType="date"
                                android:lines="1"
                                android:maxLength="5"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAppearance="@style/normal_text_in_layout_Style"
                                android:textColor="@color/almost_white"
                                android:textColorHighlight="@color/white_80_opacity"
                                android:textColorLink="@android:color/transparent"
                                android:textCursorDrawable="@color/white"
                                android:textSize="14sp"
                                app:backgroundTint="@color/white_40_opacity" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/cvvTextInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColorHint="@color/white_80_opacity"
                            android:theme="@style/EditTextStyle"
                            app:errorTextAppearance="@style/error_appearance"
                            app:hintTextAppearance="@style/text_in_layout_hint_Style">

                            <EditText
                                android:id="@+id/SIGNUP2_CVV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_standard"
                                android:animateLayoutChanges="true"
                                android:backgroundTint="@color/white_40_opacity"
                                android:hint="Security code (CVV)"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="4"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAppearance="@style/normal_text_in_layout_Style"
                                android:textColor="@color/almost_white"
                                android:textColorHighlight="@color/white_80_opacity"
                                android:textColorLink="@android:color/transparent"
                                android:textCursorDrawable="@color/white"
                                android:textSize="14sp"
                                app:backgroundTint="@color/white_40_opacity" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                <LinearLayout
                    android:id="@+id/LAYOUT_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard_and_half"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Use shipping address for billing?"
                        android:textColor="@color/almost_white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:layout_weight="0.2">

                        <TextView
                            android:id="@+id/signup_yes_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YES"
                            android:textColor="@color/new_red"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/SIGNUP2_SWITCH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/paymentmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LAYOUT_5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/double_margin_standard"
                    android:layout_gravity="center_horizontal"
                    android:text="You'll be able to review details before being charged."
                    android:textColor="@color/almost_white"
                    android:textSize="12sp"
                    android:textStyle="italic" />


                <LinearLayout
                    android:id="@+id/LAYOUT_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paymentmsg"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:visibility="gone"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/billingAddresInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/white_80_opacity"
                        android:theme="@style/EditTextStyle"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/text_in_layout_hint_Style">

                        <EditText
                            android:id="@+id/SIGNUP2_ADDRESS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:backgroundTint="@color/white_40_opacity"
                            android:hint="Billing Address"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLength="26"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAppearance="@style/normal_text_in_layout_Style"
                            android:textColor="@color/almost_white"
                            android:textColorHighlight="@color/white_80_opacity"
                            android:textColorHint="@color/gray_icon"
                            android:textColorLink="@android:color/transparent"
                            android:textCursorDrawable="@color/white"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white_40_opacity" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/billingAddres2InputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/white_80_opacity"
                        android:theme="@style/EditTextStyle"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/text_in_layout_hint_Style">

                        <EditText
                            android:id="@+id/SIGNUP2_ADDRESS2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:animateLayoutChanges="true"
                            android:backgroundTint="@color/white_40_opacity"
                            android:hint="Billing Address 2"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLength="26"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAppearance="@style/normal_text_in_layout_Style"
                            android:textColor="@color/almost_white"
                            android:textColorHighlight="@color/white_80_opacity"
                            android:textColorHint="@color/gray_icon"
                            android:textColorLink="@android:color/transparent"
                            android:textCursorDrawable="@color/white"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white_40_opacity" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LAYOUT_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LAYOUT_6"
                    android:layout_marginBottom="@dimen/a_lot_margin_standard"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/billingCityInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColorHint="@color/white_80_opacity"
                        android:theme="@style/EditTextStyle"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/text_in_layout_hint_Style">

                        <EditText
                            android:id="@+id/SIGNUP2_CITY"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:backgroundTint="@color/white_40_opacity"
                            android:hint="@string/fragment_sign_up_step_one_city"
                            android:inputType="text"
                            android:maxLength="26"
                            android:maxLines="1"
                            android:textAppearance="@style/normal_text_in_layout_Style"
                            android:textColor="@color/almost_white"
                            android:textColorHighlight="@color/white_80_opacity"
                            android:textColorLink="@android:color/transparent"
                            android:textCursorDrawable="@color/white"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white_40_opacity" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/billingStateInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:textColorHint="@color/white_80_opacity"
                        android:theme="@style/EditTextStyle"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/text_in_layout_hint_Style">

                        <EditText
                            android:id="@+id/SIGNUP2_STATE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:backgroundTint="@color/white_40_opacity"
                            android:hint="@string/fragment_sign_up_step_one_state"
                            android:inputType="textCapCharacters"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:textAppearance="@style/normal_text_in_layout_Style"
                            android:textColor="@color/almost_white"
                            android:textColorHighlight="@color/white_80_opacity"
                            android:textColorLink="@android:color/transparent"
                            android:textCursorDrawable="@color/white"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white_40_opacity" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/billingZipInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:textColorHint="@color/white_80_opacity"
                        android:theme="@style/EditTextStyle"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/text_in_layout_hint_Style">

                        <EditText
                            android:id="@+id/SIGNUP2_ZIP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:backgroundTint="@color/white_40_opacity"
                            android:hint="@string/fragment_sign_up_step_one_zip"
                            android:inputType="number"
                            android:maxLength="5"
                            android:maxLines="1"
                            android:textAppearance="@style/normal_text_in_layout_Style"
                            android:textColor="@color/almost_white"
                            android:textColorHighlight="@color/white_80_opacity"
                            android:textColorLink="@android:color/transparent"
                            android:textCursorDrawable="@color/white"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white_40_opacity" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


        <TextView
            android:id="@+id/button_next2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/basic_button_height"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom |center_horizontal"
            android:layout_marginBottom="@dimen/double_margin_standard"
            android:layout_marginTop="@dimen/margin_standard_and_half"
            android:background="@drawable/mpbutton1"
            android:elevation="5dp"
            android:gravity="center"
            android:text="@string/fragment_sign_up_step_one_next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/progress"
            layout="@layout/view_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>