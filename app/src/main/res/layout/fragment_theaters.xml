<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/search_inactive"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:background="@drawable/circle_white_alpha"
        android:src="@drawable/ic_search_black_24dp"
        android:tint="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/myloc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle_white_alpha"
        android:src="@drawable/locationicon"
        android:tint="@color/new_red"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ListViewMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/test_black"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half">

            <TextView
                android:id="@+id/ListViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_half"
                android:text="List View"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_toEndOf="@id/ListViewText"
                android:src="@drawable/icondown"
                android:tint="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/goneList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/test_black"
            android:visibility="invisible">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewTheaters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_item_theater" />


        </RelativeLayout>

    </LinearLayout>

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>