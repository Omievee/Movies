<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/search_inactive"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:background="@drawable/circle_white_alpha"
        android:src="@drawable/ic_search_black_24dp"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/myloc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle_white_alpha"
        android:src="@drawable/locationicon"
        android:tint="@color/new_red"
        android:visibility="gone" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layoutAnimation="@anim/layout_animation"
        android:listSelector="@android:color/transparent"
        android:orientation="horizontal"
        tools:listitem="@layout/list_item_theater" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:layoutAnimation="@anim/layout_animation_slide_from_bottom"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>


    <ImageView
        android:id="@+id/List_Switch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/magin_MAX"
        android:layout_marginEnd="@dimen/margin_standard"
        android:background="@drawable/circle_white_alpha"
        android:src="@drawable/list_icon2"
        android:tint="@color/white" />


    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>