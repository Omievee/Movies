<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_theater"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="@dimen/margin_half"
    android:elevation="@dimen/basic_elevation"
    android:padding="@dimen/margin_half"
    app:cardCornerRadius="4dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/rel_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/test_blue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/theater_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/more_spacing"
            android:maxLines="2"
            android:text="@string/fragment_theaters_name"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theater_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/more_spacing"
            android:text="@string/fragment_theaters_address"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/theater_city_things"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/more_spacing"
            android:text="@string/fragment_theaters_address"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_ticket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/less_spacing"
                android:layout_weight=".2"
                android:src="@drawable/round_badge_eticket"
                android:textAlignment="viewStart" />

            <ImageView
                android:id="@+id/icon_seat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/less_spacing"
                android:layout_weight=".2"
                android:src="@drawable/round_badge_seat"
                android:textAlignment="viewEnd" />


            <TextView
                android:id="@+id/theater_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:padding="@dimen/more_spacing"
                android:text="@string/fragment_theaters_distance"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:paddingEnd="5dp"
                android:src="@drawable/icon_location_pin"
                android:textAlignment="viewStart"
                android:tint="@color/red" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>