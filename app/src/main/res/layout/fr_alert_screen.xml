<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ALertbackground"
    style="@style/ReservationBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/dismissAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_half"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:src="@drawable/close_white"
        android:tint="@color/white" />


    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/a_lot_margin_standard"
        android:padding="@dimen/margin_half"
        android:text=""
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alertBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:alpha=".8"
        android:padding="@dimen/margin_half"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white_ish"
        android:textSize="18sp" />


    <FrameLayout
        android:id="@+id/alertClickMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/a_lot_margin_standard">


        <TextView
            android:id="@+id/LinkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/margin_standard"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/new_red"
            android:textSize="18sp" />


    </FrameLayout>

    <Button
        android:id="@+id/acceptButton"
        style="@style/MoviepassButton"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/doubledouble_margin_standard" />


</RelativeLayout>
