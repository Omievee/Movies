<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TUTORIAL_MAIN_ACTIVITY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_blue"
    tools:context="com.mobile.activities.ActivatedCard_TutorialActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/tutorial_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/double_margin_standard"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/TUTORIAL_DONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/double_margin_standard"
            android:layout_marginBottom="@dimen/doubledouble_margin_standard"
            android:text="Done"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/doubledouble_margin_standard"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tutorial_indicator_0"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/margin_standard"
                android:layout_marginStart="@dimen/margin_standard"
                android:background="@drawable/indicator_unselected"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/tutorial_indicator_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/margin_standard"
                android:layout_marginStart="@dimen/margin_standard"
                android:background="@drawable/indicator_unselected" />

            <ImageView
                android:id="@+id/tutorial_indicator_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/margin_standard"
                android:background="@drawable/indicator_unselected" />

            <ImageView
                android:id="@+id/tutorial_indicator_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/margin_standard"
                android:background="@drawable/indicator_unselected" />

            <ImageView
                android:id="@+id/tutorial_indicator_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="@dimen/margin_standard"
                android:background="@drawable/indicator_unselected" />


        </LinearLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
