<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CONFIRM_COORD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_blue"
    tools:context="com.moviepass.fragments.SignUpStepThreeFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/CONFIRM_SHIPTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ship to:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CONFIRM_FULL_NAME"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_half"
                android:text="[ First + Last Name ]"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/CONFIRM_FULL_ADDRESS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_half"
                android:text="[ Address 1 + 2 ]"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/CONFIRM_SHIPTO2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONFIRM_SHIPTO"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_minimum"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/CONFIRM_CITYSTATEZIP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="[ City, State Zip ]"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/CONFIRM_EDIT_ADDRESS"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="Edit"
                android:textAlignment="center"
                android:textColor="@color/new_red"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/CONFIRM_BILLING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONFIRM_SHIPTO2"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_standard"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="XXXX - XXXX - XXXX"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/CONFIRM_NUMBER"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:text="-1234 ]"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/CONFIRM_EDIT_BILLING"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_weight=".3"
                    android:text="Edit"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/new_red"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/CONFIRM_BILLING"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:alpha=".9" />

        <LinearLayout
            android:id="@+id/CONFIRM_DETAILS_MSG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_standard"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="$9.95/month "
                    android:textColor="@color/new_red"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_half"
                android:text="@string/fragment_sign_up_step_two_header"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_minimum"
                android:text="Please allow 7-10 business days for shipping"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="italic" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/CONFIRM_TERMS_TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONFIRM_DETAILS_MSG"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_minimum"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ToS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_half"
                android:maxLines="1"
                android:text="@string/fragment_sign_up_step_three_terms"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/CONFIRM_ToS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ToS"
                android:text="@string/fragment_sign_up_step_three_terms_link"
                android:textColor="@color/new_red"
                android:textSize="15sp" />


            <Switch
                android:id="@+id/CONFIRM_SWITCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"

                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONFIRM_TERMS_TEXT"
            android:layout_marginStart="@dimen/margin_half"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_sign_up_step_three_terms2"
                android:textAlignment="viewStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/CONFIRM_PRIVACY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/quadruple_margin_standard"
                android:layout_marginStart="5dp"
                android:padding="@dimen/margin_minimum"
                android:text="@string/fragment_sign_up_step_three_terms_link2"
                android:textAlignment="viewStart"
                android:textColor="@color/new_red"
                android:textSize="15sp" />

        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/CONFIRM_SUBMIT"
        android:layout_width="200dp"
        android:layout_height="@dimen/basic_button_height"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom |center_horizontal"
        android:layout_marginBottom="@dimen/margin_standard"
        android:background="@drawable/selectseat_confirm_button"
        android:elevation="5dp"
        android:gravity="center"
        android:text="@string/fragment_sign_up_step_three_submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <include
        android:id="@+id/step3_progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</android.support.design.widget.CoordinatorLayout>
