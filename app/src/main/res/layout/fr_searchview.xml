<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_black"
    android:clickable="true">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/searchBar"
        style="@style/MaterialSearchBarLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/FRAME"
        android:layout_marginTop="@dimen/double_margin_standard"
        app:mt_backIconTint="@color/white"
        app:mt_borderlessRippleEnabled="true"
        app:mt_clearIconTint="@color/new_red"
        app:mt_dividerColor="@color/new_red"
        app:mt_hintColor="@color/test_black"
        app:mt_maxSuggestionsCount="3"
        app:mt_placeholder="Search Movies"
        app:mt_placeholderColor="@color/white"
        app:mt_roundedSearchBarEnabled="true"
        app:mt_searchBarColor="@color/test_blue"
        app:mt_searchIconTint="@color/white"
        app:mt_textColor="@color/white" />


    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

</RelativeLayout>