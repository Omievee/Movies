<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_standard"
    android:background="@color/test_black">

    <TextView
        android:id="@+id/HEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="History"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="@dimen/margin_half"
        android:textStyle="bold" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/historyReycler"
        android:layout_width="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="@dimen/doubledouble_margin_standard"
        android:background="@color/test_black">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/NoMoives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HEADER"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/double_margin_standard"
        android:text="You have no viewing history at this time"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>