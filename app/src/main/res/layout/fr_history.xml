<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_black">

    <TextView
        android:id="@+id/HEADER"
        style="@style/TitleView"
        android:layout_marginTop="@dimen/status_bar_height"
        android:text="History" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/historyReycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/HEADER"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="@dimen/margin_minimum"
        android:layout_marginStart="@dimen/margin_minimum"
        android:background="@color/test_black"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/NoMoives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HEADER"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/double_margin_standard"
        android:text="You have no viewing history at this time"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <include
        android:id="@+id/progress"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>