<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context="com.mobile.activities.AlertActivity">


    <ImageView
        android:id="@+id/dismissAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_half"
        android:layout_marginTop="@dimen/double_margin_standard"
        android:src="@drawable/close_white"
        android:tint="@color/white" />


    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/a_lot_margin_standard"
        android:padding="@dimen/margin_half"
        android:text=""
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:alpha=".8"
        android:padding="@dimen/margin_half"
        android:text="Black Panther is temporarily unavailable for some theaters. It will be reactivated on 5/21"
        android:textAlignment="center"
        android:textColor="@color/white_ish"
        android:textSize="18sp"
        android:visibility="invisible" />


    <FrameLayout
        android:id="@+id/alertClickMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertMessage"
        android:layout_marginTop="@dimen/a_lot_margin_standard"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_standard"
            android:text="Update to the latest version of the app in order to continue"
            android:textAlignment="center"
            android:textColor="@color/new_red"
            android:textSize="18sp" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/a_lot_margin_standard"
            android:layout_marginTop="38dp"
            android:src="@drawable/arrowforward"
            android:tint="@color/new_red" />


    </FrameLayout>
</RelativeLayout>
