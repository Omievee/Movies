<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_theater"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:background="@drawable/card_view"
    android:paddingBottom="5dp"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp"
    android:paddingTop="5dp"
    tools:ignore="MissingPrefix"
    android:elevation="@dimen/basic_elevation">

    <RelativeLayout
        android:id="@+id/rel_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/showtime_rounded_rectangle"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/theater_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/fragment_theaters_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/selector_red_to_white"/>

        <TextView
            android:id="@+id/theater_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theater_name"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="@string/fragment_theaters_address"
            android:textSize="14sp"
            android:textColor="@color/selector_gun_metal_to_white_ish"/>


        <TextView
            android:id="@+id/theater_city_things"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theater_address"
            android:maxLines="1"
            android:text="@string/fragment_theaters_address"
            android:textSize="14sp"
            android:textColor="@color/selector_gun_metal_to_white_ish"/>


        <ImageView
            android:id="@+id/icon_pin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/theater_city_things"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_location_pin" />

        <TextView
            android:id="@+id/theater_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_pin"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/icon_pin"
            android:layout_toRightOf="@+id/icon_pin"
            android:text="@string/fragment_theaters_distance"
            android:textSize="14sp"
            android:textColor="@color/selector_pinkish_gray_to_white_ish"/>

        <RelativeLayout
            android:id="@+id/layout_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_ticket"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/round_badge_eticket" />

            <ImageView
                android:id="@+id/icon_seat"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_toRightOf="@+id/icon_ticket"
                android:src="@drawable/round_badge_seat" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>