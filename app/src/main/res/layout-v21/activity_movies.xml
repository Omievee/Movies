<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/COORDPARENT"
    android:layout_height="match_parent"
    android:background="@color/test_black"
    android:orientation="vertical">


    <!--MAIN SKELETON FOR MAIN MOVIES PAGE, FRAME LAYOUT HOUSES LOGO ABOVE ALL ELSE-->
    <FrameLayout
        android:id="@+id/MAIN_CONTAINER"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation"
        android:background="@color/test_black" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/MovieToolbar_MAINPAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingTop="@dimen/double_margin_standard">

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/MovieSearch_Results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:visibility="gone">

    </ListView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/FAB_RESERVATION_MENU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="5dp"
        android:elevation="5dp"
        app:fab_colorRipple="@color/white"
        app:fab_size="normal"
        app:layout_anchorGravity="bottom"
        app:menu_colorNormal="@color/new_red"
        app:menu_icon="@drawable/ticketnavwhite" />

    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" />

</RelativeLayout>