<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/margin_half"
    android:paddingRight="@dimen/margin_half"
    tools:context="com.mobile.activities.OnboardingActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/double_margin_standard"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal |bottom">

        <TextView
            android:id="@+id/tutorial_body"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".8"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="Add a long description here about your app's important feature."
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finePrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tutorial_body"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_half"
            android:text="*Your subscription will begin upon your first e-ticket check-in."
            android:textSize="13sp"
            android:textStyle="italic"
            android:visibility="gone" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/tutorial_images"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_half"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tutorial_header"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        tools:text="Page One" />


    <RelativeLayout
        android:id="@+id/relfinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorial_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_half"
        android:visibility="gone">

        <TextView
            android:id="@+id/lastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Look for the e-ticket icon: "
            android:textSize="16sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_toEndOf="@id/lastText"
            android:src="@drawable/ticketnavwhite" />
    </RelativeLayout>


</RelativeLayout>

