<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="MoviePassThemeTransparentStatusBar" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="MoviepassButton">
        <item name="android:background">@drawable/mpbutton</item>
        <item name="layout_constraintWidth_min">100dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/tex_gyre_adventor</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/tex_gyre_adventor</item>
    </style>


    <style name="RedMoviepassButton" parent="MoviepassButton">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_standard_and_half</item>
        <item name="android:paddingEnd">@dimen/margin_standard_and_half</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Helpshift.Theme.Base" parent="MyCustomHelpshiftTheme" />

    <style name="MyCustomHelpshiftTheme" parent="Helpshift.Theme.Dark">
        <item name="colorPrimary">@color/charcoalGrey</item>
        <item name="colorAccent">@color/new_red</item>
        <item name="colorPrimaryDark">@color/test_black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/almost_white</item>
        <item name="android:windowBackground">@color/test_black</item>
        <item name="android:colorBackground">@color/charcoalGrey</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="CircularProgressWhite" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MyOverflowText" parent="TextAppearance.AppCompat.Small">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/new_red</item>
    </style>

    <!-- Red theme -->
    <style name="RedTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Alert Dialogs -->
    <style name="CUSTOM_ALERT" parent="Theme.AppCompat.Dialog.Alert">
        <!-- SET BUTTON COLOR IN DIALOG BUILDER -->
        <item name="colorPrimary">@color/charcoalGrey</item>
        <item name="colorAccent">@color/new_red</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:colorPrimary">@color/new_red</item>
        <item name="android:windowBackground">@color/charcoalGrey</item>
    </style>

    <!-- Style to get white text on toolbars -->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <!-- <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/charcoal</item>
    </style> -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/white_80_opacity</item>
    </style>

    <style name="text_in_layout_hint_Style" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/tex_gyre_adventor</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/tex_gyre_adventor</item>
    </style>

    <style name="normal_text_in_layout_Style">
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="error_appearance" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/new_red</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/charcoalGrey</item>
        <item name="colorPrimary">@color/test_black</item>
    </style>

    <style name="MaterialSpinner" parent="LoyaltySpinnerItemSet">
        <item name="ms_arrow_tint">@color/almost_white</item>
        <item name="ms_background_color">@color/charcoalGrey</item>
        <item name="ms_hint_color">@color/almost_white</item>
        <item name="ms_text_color">@color/almost_white</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
    </style>

    <style name="TitleView">
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">9sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="fontWeight" tools:targetApi="26">500</item>
        <item name="android:fontWeight" tools:targetApi="26">500</item>
        <item name="android:fontFamily" tools:targetApi="26">@font/tex_gyre_adventor</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dark</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoyaltySpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/margin_half</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="fontFamily">@font/tex_gyre_adventor</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/tex_gyre_adventor</item>
        <item name="android:fontWeight" tools:targetApi="o">300</item>
        <item name="fontWeight" tools:targetApi="o">300</item>
    </style>

    <style name="LoyaltySpinnerItemSet" parent="LoyaltySpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight" tools:targetApi="26">500</item>
        <item name="android:fontWeight" tools:targetApi="26">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="LoyaltyProgramDescription">
        <item name="fontFamily">@font/tex_gyre_adventor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:targetApi="26">@font/tex_gyre_adventor</item>
        <item name="android:textColor">@color/almost_white</item>
    </style>

    <style name="LoyaltyAddProgramDescription">
        <item name="fontFamily">@font/tex_gyre_adventor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="26">@font/tex_gyre_adventor</item>
        <item name="android:textColor">@color/almost_white</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorControlActivated">@color/almost_white</item>
        <item name="colorControlHighlight">@color/almost_white</item>
        <item name="colorControlNormal">@color/white_40_opacity</item>
        <item name="hintTextAppearance">@style/text_in_layout_hint_Style</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="passwordToggleTint">@color/almost_white</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColorHint">@color/white_80_opacity</item>
        <item name="colorControlActivated">@color/white_80_opacity</item>
        <item name="android:colorControlActivated">@color/white_80_opacity</item>
        <item name="android:textAppearance">@style/normal_text_in_layout_Style</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/tex_gyre_adventor</item>
        <item name="android:letterSpacing">.15</item>
        <item name="android:fontFamily" target="26">@font/tex_gyre_adventor</item>
        <item name="colorControlNormal">@color/white_40_opacity</item>
        <item name="android:colorControlNormal">@color/white_40_opacity</item>
        <item name="colorControlHighlight">@color/white_80_opacity</item>
        <item name="android:colorControlHighlight">@color/white_80_opacity</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textColorHighlight">@color/white_80_opacity</item>
        <item name="android:textColorLink">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/white_40_opacity</item>
        <item name="backgroundTint">@color/white_40_opacity</item>
    </style>

    <style name="LoyaltyMyProgramsHeader" parent="LoyaltyProgramDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:paddingStart">@dimen/margin_half</item>
        <item name="android:layout_height">@dimen/action_bar_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/loyalty_my_loyalty_programs</item>
    </style>
</resources>